# Пример GitHub Actions workflow для автоматического деплоя frontend
# Скопируйте этот файл в ваш репозиторий frontend: .github/workflows/deploy.yml
# И настройте GitHub Secrets: SERVER_HOST, SERVER_USER, DEPLOY_SECRET_KEY

name: Deploy Frontend

on:
  push:
    branches:
      - main
      - master
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Deploy to server
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.DEPLOY_SECRET_KEY }}
          script: |
            cd /root/project/deployment || exit 1
            
            # Настройка SSH для работы с GitHub
            eval "$(ssh-agent -s)"
            ssh-add ~/.ssh/github_keys || true
            
            # Обновляем только frontend репозиторий
            echo "Обновляем frontend репозиторий..."
            bash scripts/update-single-repo.sh frontend || exit 1
            
            # Перезапускаем только frontend
            echo "Перезапускаем frontend контейнер..."
            docker-compose up -d --build frontend
            
            echo "Деплой frontend завершён успешно!"
